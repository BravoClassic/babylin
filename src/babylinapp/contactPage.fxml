         <Button fx:id="copyNum" layoutX="267.0" layoutY="242.0" mnemonicParsing="false" onAction="#copyNumber" prefHeight="25.0" prefWidth="55.0" text="Copy" />
         <Button fx:id="reset" layoutX="269.0" layoutY="340.0" mnemonicParsing="false" onAction="#resetPwd" prefHeight="25.0" prefWidth="55.0" text="Reset" />
         <PasswordField fx:id="pwd" layoutX="115.0" layoutY="284.0" prefHeight="25.0" prefWidth="208.0" />
         <Label layoutX="61.0" layoutY="288.0" text="Password" fx:id="pwdLabel" />
         <CheckBox fx:id="pwdChange" layoutX="116.0" layoutY="317.0" mnemonicParsing="false" text="Check this box to change password" />
      </AnchorPane>
   </HBox>
</AnchorPane>
