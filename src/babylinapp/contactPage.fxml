         <ComboBox fx:id="comboContactName" layoutX="25.0" layoutY="188.0" onAction="#displayContact" prefWidth="150.0" promptText="Select Contact" />
      </AnchorPane>
   </HBox>
   <HBox layoutX="200.0" layoutY="-1.0" prefHeight="400.0" prefWidth="399.0">
      <AnchorPane prefHeight="400.0" prefWidth="400.0">

         <Label layoutX="73.0" layoutY="100.0" prefHeight="17.0" prefWidth="40.0" text="Name" />
         <Label layoutX="66.0" layoutY="140.0" text="Birthday" />
         <Label layoutX="73.0" layoutY="175.0" text="Email" />
         <Label layoutX="66.0" layoutY="207.0" text="Address" />
         <Label layoutX="69.0" layoutY="246.0" text="Phone" />
         <TextField fx:id="fullName" layoutX="115.0" layoutY="96.0" prefHeight="25.0" prefWidth="208.0" />
         <DatePicker fx:id="dob" cache="true" layoutX="115.0" layoutY="136.0" prefHeight="25.0" prefWidth="208.0" />
         <TextField fx:id="email" layoutX="115.0" layoutY="171.0" />
         <TextField fx:id="address" layoutX="115.0" layoutY="203.0" prefHeight="25.0" prefWidth="208.0" />
         <TextField fx:id="phone" layoutX="115.0" layoutY="242.0" />
         <Button fx:id="back" layoutX="209.0" layoutY="340.0" onAction="#goMenu" mnemonicParsing="false" prefHeight="25.0" prefWidth="55.0" text="Back" />
         <Label layoutX="79.0" layoutY="37.0" text="Contact Details">
            <font>
               <Font size="30.0" />
            </font>
         </Label>
