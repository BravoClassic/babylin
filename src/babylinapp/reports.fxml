<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="babylinapp.reportsController">
   <BorderPane prefHeight="500.0" prefWidth="800.0">
      <top>
         <AnchorPane prefHeight="101.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" layoutX="298.0" layoutY="16.0" prefHeight="69.0" prefWidth="209.0" text="Reports" textAlignment="CENTER">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </AnchorPane>
      </top>
      <left>
         <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <DatePicker fx:id="specificDate" layoutX="13.0" layoutY="107.0" promptText="Select Date" />
         </AnchorPane>
      </left>
      <center>
         <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <MediaView fx:id="pdfReportViewer"  fitHeight="400.0" fitWidth="400.0" layoutX="3.0">
               <viewport>
                  <Rectangle2D height="400.0" minX="300.0" minY="300.0" width="400.0" />
               </viewport></MediaView>
         </AnchorPane>
      </center>
      <right>
         <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <ComboBox fx:id="comboBoxReportType" layoutX="20.0" layoutY="109.0" prefHeight="25.0" prefWidth="162.0" promptText="Select Type of report" />
            <Button fx:id="generateReportButton" layoutX="45.0" layoutY="175.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="111.0" text="Generate Report" />
            <Button fx:id="back" layoutX="45.0" layoutY="218.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="111.0" text="Back" />
         </AnchorPane>
      </right>
      <bottom>
         <AnchorPane prefHeight="100.0" prefWidth="800.0" BorderPane.alignment="CENTER" />
      </bottom>
   </BorderPane>
</AnchorPane>
